<p id="notice"><%= notice %></p>

<h1>Raticles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raticles.each do |raticle| %>
      <tr>
        <td><%= raticle.title %></td>
        <td><%= raticle.author %></td>
        <td><%= raticle.text %></td>
        <td><%= link_to 'Show', raticle %></td>
        <td><%= link_to 'Edit', edit_raticle_path(raticle) %></td>
        <td><%= link_to 'Destroy', raticle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

